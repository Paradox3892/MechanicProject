<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:foregroundTint="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Chat">


    <TextView
        android:id="@+id/chatTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:baselineAligned="false"
        android:fontFamily="sans-serif"
        android:padding="10dp"
        android:text="Call Page"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="338dp"
        android:layout_height="461dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatTxt">


        <LinearLayout
            android:id="@+id/phoneNo_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp"
            >

            <ImageView
                android:id="@+id/phone_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/phone_icon"
                android:layout_marginStart="40dp"
                />

            <TextView
                android:id="@+id/phoneNo_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone No"
                android:textSize="30sp"
                android:autoLink="phone"
                android:linksClickable="true"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/myRectangleView"
        android:layout_width="338dp"
        android:layout_height="461dp"
        android:layout_marginTop="42dp"
        android:visibility="invisible"
        android:background="@drawable/rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatTxt" />


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="281dp"
        android:layout_height="104dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/card_message"
        android:clickable="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/myRectangleView">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="130dp"
            android:layout_height="79dp"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/man"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="128dp" />

        <TextView
            android:id="@+id/prof_txt"
            android:layout_width="124dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="149dp"
            android:layout_marginBottom="7dp"
            android:clickable="true"
            android:text="Are you available now?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/prof_txt3"
            android:layout_width="138dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="142dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:minHeight="48dp"
            android:text="Mechanic"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="274dp"
        android:layout_height="95dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/card_message"
        android:clickable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="79dp"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/man"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="128dp" />

        <TextView
            android:id="@+id/prof_txt33"
            android:layout_width="123dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="142dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:text="Mechanic"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/msg"
            android:layout_width="144dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="13dp"
            android:autofillHints="abc@gmail.com"
            android:background="@color/white"
            android:backgroundTint="#FFFCFC"
            android:hint="Message"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp"
            android:shadowColor="@color/white"
            android:textColor="#101010"
            android:textSize="15dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/dial2"
        android:layout_width="179dp"
        android:layout_height="48dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="#0F87EC"
        android:text="Dial"
        android:textAllCaps="false"
        android:visibility="visible"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <ImageView
        android:id="@+id/feedback"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myRectangleView"
        app:srcCompat="@drawable/ic_feedback" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myRectangleView"
        app:srcCompat="@drawable/ic_home" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/myRectangleView"
        app:srcCompat="@drawable/ic_notification" />


</androidx.constraintlayout.widget.ConstraintLayout>
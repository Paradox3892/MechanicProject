<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@color/white"
    android:gravity="bottom"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="64dp"
        android:layout_height="45dp"
        android:layout_marginStart="201dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"

        android:layout_marginTop="21dp"
        android:background="#396dbf"
        android:clickable="true"
        android:padding="8dp"
        android:text="Profile"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/nameTxtF"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"

        android:layout_marginTop="14dp"
        android:background="#396dbf"
        android:clickable="true"
        android:padding="8dp"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/userTxtF"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"

        android:layout_marginTop="19dp"
        android:background="#396dbf"
        android:clickable="true"
        android:padding="8dp"
        android:text="Username"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTxtF" />

    <TextView
        android:id="@+id/emailTxtF"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"

        android:layout_marginTop="21dp"
        android:background="#396dbf"
        android:clickable="true"
        android:padding="8dp"
        android:text="Email Address"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userTxtF" />

    <TextView
        android:id="@+id/Logout"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"

        android:layout_marginTop="113dp"
        android:background="#396dbf"
        android:clickable="true"
        android:padding="8dp"
        android:text="Logout"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTxtF" />

</androidx.constraintlayout.widget.ConstraintLayout>

